@model Profile

<form method="post" asp-action="EditProfile" asp-controller="Profile">
    <h1 class="text-warning">Edit Profile</h1>

    <input asp-for="ProfileID" value="@Model.ProfileID" hidden/>

    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" placeholder="@Model.Name" class="form-control" />
    </div> 
    
    <div class="mb-3">
        <label asp-for="Password"></label>
        <input asp-for="Password" placeholder="@Model.Password" class="form-control" />
    </div>
    
    <div class="mb-3">
        <label asp-for="Age"></label>
        <input asp-for="Age" placeholder="@Model.Age" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Likes"></label>
        <input asp-for="Likes" placeholder="@Model.Likes" class="form-control" />
    </div>


    <button type="submit" class="btn btn-primary">Update</button>

    <a asp-controller="Profile" asp-action="MyPage" class="btn btn-secondary">
        Back To Page
    </a>
</form>
